---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  keywords?: string;
}

const { title, description = 'WikiFlow - 极简索引，专注于知识管理和分享', keywords = '' } = Astro.props;
const siteTitle = 'WikiFlow';
const fullTitle = title === siteTitle ? title : `${title} - ${siteTitle}`;
---

<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{fullTitle}</title>
  <meta name="description" content={description}>
  {keywords && <meta name="keywords" content={keywords}>}
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="sitemap" href="/sitemap-index.xml">
</head>
<body class="bg-white text-black min-h-screen">
  <div class="max-w-5xl mx-auto px-4 py-6 bg-white min-h-screen border-x border-gray-200 shadow-none">
    <!-- 头部：Logo 和 搜索 -->
    <header class="flex flex-col md:flex-row md:items-end justify-between border-b-2 border-black pb-4 mb-6 gap-4">
      <div>
        <h1 class="text-3xl font-bold tracking-tighter text-black font-sans">
          <a href="/" class="no-underline hover:none text-black">WikiFlow</a>
        </h1>
      </div>
      
      <!-- 朴素的搜索框 -->
      <div class="w-full md:w-auto">
        <form id="search-form" class="flex gap-1">
          <input 
            type="text" 
            id="search-input"
            placeholder="搜索文章标题..." 
            class="border border-gray-400 px-2 py-1 w-64 text-sm rounded-none focus:border-black"
          >
          <button type="submit" class="bg-gray-200 border border-gray-400 px-3 py-1 text-sm text-black hover:bg-gray-300 active:bg-gray-400 rounded-none font-medium">
            搜索
          </button>
        </form>
      </div>
    </header>

    <slot />

    <!-- 极简 Footer -->
    <footer class="mt-12 pt-6 border-t border-gray-300 text-center text-xs text-gray-500">
      <p class="mb-2">
        &copy; 2023 WikiFlow. Powered by <a href="https://astro.build" class="text-gray-600 underline">Astro</a>. 
      </p>
    </footer>
  </div>

  <script>
    // 搜索功能
    const searchForm = document.getElementById('search-form');
    const searchInput = document.getElementById('search-input') as HTMLInputElement;

    if (searchForm && searchInput) {
      searchForm.addEventListener('submit', (e) => {
        e.preventDefault();
        const query = searchInput.value.trim();
        if (query) {
          window.location.href = `/search?q=${encodeURIComponent(query)}`;
        }
      });
    }
  </script>
</body>
</html>
